{
    "extends": "@react-native/typescript-config/tsconfig.json",
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "esnext"
        ],
        "jsx": "react-native",
        "module": "esnext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "@components/*": [
                "components/*"
            ],
            "@screens/*": [
                "screens/*"
            ],
            "@navigation/*": [
                "navigation/*"
            ],
            "@store/*": [
                "store/*"
            ],
            "@services/*": [
                "services/*"
            ],
            "@hooks/*": [
                "hooks/*"
            ],
            "@types/*": [
                "types/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@theme/*": [
                "theme/*"
            ],
            "@constants/*": [
                "constants/*"
            ],
            "@assets/*": [
                "assets/*"
            ]
        }
        // add ONLY if needed
        // "customConditions": ["react-native"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}